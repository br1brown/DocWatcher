<UserControl x:Class="DocWatcher.Wpf.Views.DocumentViewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="450"
             d:DesignHeight="320">

    <UserControl.Resources>

        <!-- Stile per i pulsanti -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <Style x:Key="DangerButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="IndianRed"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titolo -->
            <RowDefinition Height="Auto"/>
            <!-- Scadenza -->
            <RowDefinition Height="Auto"/>
            <!-- File -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsante Apri File -->
            <RowDefinition Height="Auto"/>
            <!-- Stato -->
            <RowDefinition Height="*"/>
            <!-- Spazio -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Label -->
            <ColumnDefinition Width="*"/>
            <!-- Valore -->
        </Grid.ColumnDefinitions>

        <!-- TITOLO (spans both columns) -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
               Margin="0,0,0,16"
               FontSize="16" FontWeight="SemiBold"
               Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!-- SCADENZA -->
        <TextBlock Grid.Row="1" Grid.Column="0"
               Text="Scadenza:" FontWeight="SemiBold"
               Margin="0,0,16,8"/>
        <TextBlock Grid.Row="1" Grid.Column="1"
               Margin="0,0,0,8"
               Text="{Binding DueDate, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat='{}{0:dd/MM/yyyy}'}"/>

        <!-- FILE -->
        <TextBlock Grid.Row="2" Grid.Column="0"
               Text="File:" FontWeight="SemiBold"
               Margin="0,0,16,8"/>
        <TextBlock Grid.Row="2" Grid.Column="1"
               Margin="0,0,0,8"
               TextTrimming="CharacterEllipsis"
               Text="{Binding FilePath, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!-- PULSANTE APRI FILE -->
        <Button Grid.Row="3" Grid.Column="1"
            Content="Apri file"
            Style="{StaticResource PrimaryButtonStyle}"
            Margin="0,0,0,16"
            Click="OpenFile_Click"/>

        <!-- STATO -->
        <TextBlock Grid.Row="4" Grid.Column="0"
               Text="Stato:" FontWeight="SemiBold"
               Margin="0,0,16,8"/>
        <TextBlock Grid.Row="4" Grid.Column="1"
               Margin="0,0,0,8"
               Text="{Binding Status, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!-- PULSANTI (spans both columns) -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,10,0,0">
            <Button Content="Modifica"
                Style="{StaticResource PrimaryButtonStyle}"
                Click="Edit_Click"/>
            <Button Content="Elimina"
                Style="{StaticResource DangerButtonStyle}"
                Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
