<UserControl x:Class="DocWatcher.Wpf.Views.DocumentEditPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="260"
             d:DesignWidth="520">

    <!-- STILI LOCALI (tutti i pulsanti uguali) -->
    <UserControl.Resources>

        <!-- Stile base per tutti i Button in questo controllo -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <!-- Stile per il pulsante pericoloso (Elimina) -->
        <Style x:Key="DangerButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="IndianRed"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <!-- Titolo -->
            <RowDefinition Height="Auto"/>
            <!-- Scadenza -->
            <RowDefinition Height="Auto"/>
            <!-- Percorso file -->
            <RowDefinition Height="Auto"/>
            <!-- Spazio vuoto -->
            <RowDefinition Height="*"/>
            <!-- Pulsanti -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Titolo -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Margin="0,0,8,4"
                   VerticalAlignment="Center"
                   Text="Titolo:"/>
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 Margin="0,0,0,4"
                 VerticalContentAlignment="Center"
                 Text="{Binding TitleText,
                                RelativeSource={RelativeSource AncestorType=UserControl},
                                Mode=TwoWay,
                                UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Scadenza -->
        <TextBlock Grid.Row="1"
           Grid.Column="0"
           Margin="0,0,8,4"
           VerticalAlignment="Center"
           Text="Scadenza:"/>
        <DatePicker Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,4"
            SelectedDate="{Binding DueDate,
                                   RelativeSource={RelativeSource AncestorType=UserControl},
                                   Mode=TwoWay}"/>

        <!-- Percorso file -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Margin="0,0,8,4"
                   VerticalAlignment="Center"
                   Text="File:"/>
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Margin="0,0,4,4"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Text="{Binding FilePath,
                                RelativeSource={RelativeSource AncestorType=UserControl},
                                Mode=TwoWay,
                                UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="2"
                Grid.Column="2"
                Margin="0,0,0,4"
                Content="Sfoglia..."
                Style="{StaticResource PrimaryButtonStyle}"
                Click="Browse_Click"/>

        <!-- Pulsanti -->
        <DockPanel Grid.Row="4"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Margin="0,8,0,0">

            <!-- Elimina a sinistra -->
            <Button x:Name="btnElimina"
                Content="Elimina"
                Style="{StaticResource DangerButtonStyle}"
                Click="Delete_Click"
                DockPanel.Dock="Left"/>

            <!-- Salva / Annulla a destra -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Salva"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Save_Click"/>
                <Button Content="Annulla"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>

    </Grid>
</UserControl>
