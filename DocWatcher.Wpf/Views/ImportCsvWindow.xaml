<Window x:Class="DocWatcher.Wpf.Views.ImportCsvWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importa CSV"
        Width="420" Height="300" Icon="/Resources/asset/favicon.ico">
    <StackPanel Margin="12" VerticalAlignment="Top">
        <TextBlock Text="Mappa le colonne del CSV ai campi del documento:"/>

        <TextBlock Text="Titolo documento" Margin="0,8,0,0"/>
        <ComboBox x:Name="CmbTitle"/>

        <TextBlock Text="Data scadenza" Margin="0,8,0,0"/>
        <ComboBox x:Name="CmbDueDate"/>

        <TextBlock Text="Percorso file (opzionale)" Margin="0,8,0,0"/>
        <ComboBox x:Name="CmbPath"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Annulla" Width="80" Margin="0,0,4,0" Click="Cancel_Click"/>
            <Button Content="Importa" Width="80" Click="Import_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
